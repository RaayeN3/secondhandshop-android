<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.bask.niftysecondhandshop">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Base"
            android:label="Base"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.BrowseActivity"
            android:label="@string/title_activity_browse"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AdvertActivity"
            android:label="@string/title_activity_sell"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AdvertFashionActivity"
            android:label="@string/title_activity_advert_fashion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AdvertCarActivity"
            android:label="@string/title_activity_advert_car"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ViewAdvertActivity"
            android:label="@string/title_activity_view_advert"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ViewAdvertFashionActivity"
            android:label="@string/title_activity_view_advert_fashion"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.ViewAdvertCarActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>